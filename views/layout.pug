doctype html
html(lang="es")
  head
    title= title || "HIS Internación - Sistema Hospitalario"
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css")
    link(rel="stylesheet" href="/styles/main.css")
  
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container-fluid
        a.navbar-brand(href="/dashboard") 
          i.bi.bi-hospital.me-2
          | HIS Internación
        
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
          
        .collapse.navbar-collapse#navbarNav
          //- Enlaces principales eliminados
          .navbar-nav.me-auto
            //- (Vacío)
          
          .navbar-nav
            .dropdown
              a.nav-link.dropdown-toggle(href="#" data-bs-toggle="dropdown")
                i.bi.bi-person-circle.me-1
                | Usuario
              ul.dropdown-menu
                li: a.dropdown-item(href="/perfil") 
                  i.bi.bi-person.me-2
                  | Mi Perfil
                li: hr.dropdown-divider
                li: a.dropdown-item(href="/logout") 
                  i.bi.bi-box-arrow-right.me-2
                  | Cerrar Sesión

    main.container-fluid.py-4
      //- Mostrar mensajes de error/éxito
      if session && session.error
        .alert.alert-danger.alert-dismissible.fade.show
          = session.error
          button.btn-close(type="button" data-bs-dismiss="alert")
      
      if session && session.success
        .alert.alert-success.alert-dismissible.fade.show
          = session.success
          button.btn-close(type="button" data-bs-dismiss="alert")
      
      block content

    footer.bg-light.text-center.py-3.mt-5
      .container
        p.mb-0 
          i.bi.bi-c-circle.me-1
          | 2024 Sistema HIS Internación - Programación Web II
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/js/main.js")